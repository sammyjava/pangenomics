#!/bin/sh
# usage: SvmPredictor [options]
# -b,--predict-probability   toggle prediction of probability estimates
#                            [false]
# -datafile <arg>            input data file in SVM format [required]
# -modelfile <arg>           output model file [required]
# -outputfile <arg>          output prediction file [required]
# -v,--verbose               verbose output

GRAPH=$1

DATAFILE="$GRAPH.svm.scale.txt"
MODELFILE="$GRAPH.svm.model.txt"
OUTPUTFILE="$GRAPH.svm.pred.txt"

## run the SVM trainer
echo "Running SvmPredictor on $DATAFILE and $MODELFILE with output to $OUTPUTFILE"
java -server -cp "build/install/fr/lib/*" org.ncgr.svm.SvmPredictor -v -datafile $DATAFILE -modelfile $MODELFILE -outputfile $OUTPUTFILE

