#!/bin/sh

PREFIX=$1

RANGEFILE="$PREFIX.svm.range.txt"

SVMFILE="$PREFIX.testing.svm.txt"
SCALEFILE="$PREFIX.testing.svm.scale.txt"

echo "Scaling $SVMFILE to $SCALEFILE from $RANGEFILE"
java -server -cp "build/install/pangenomics/lib/*" org.ncgr.libsvm.Scaler -r $RANGEFILE -d $SVMFILE > $SCALEFILE
